<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    tools:context=".EmployeeDetailsActivity">

    <!-- Top App Bar / Header -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white">

            <!-- Back Icon -->
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="4dp"
                android:src="@drawable/baseline_arrow_back_24"
                android:contentDescription="Back"
                app:tint="@color/black"
                android:layout_marginEnd="16dp"/>

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Employee Full Details"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- CardView 1: Personal Information -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Personal Information"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="12dp"/>

                    <!-- Employee ID -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Employee ID:"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:id="@+id/tvDetailEmployeeId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="EMP-001"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>

                    <!-- Name -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name:"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:id="@+id/tvDetailName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="John Doe"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>

                    <!-- Date of Birth -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date of Birth (DOB):"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:id="@+id/tvDetailDob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="1998-05-12"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>

                    <!-- Gender & Marital Status (Side by side) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginTop="8dp">

                        <!-- Gender -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Gender:"
                                android:textColor="#333333"
                                android:textSize="14sp"/>
                            <TextView
                                android:id="@+id/tvDetailGender"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:text="Male"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="16sp"/>
                        </LinearLayout>

                        <!-- Marital Status -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Marital Status:"
                                android:textColor="#333333"
                                android:textSize="14sp"/>
                            <TextView
                                android:id="@+id/tvDetailMaritalStatus"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:text="Single"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="16sp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- NID/Passport -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="National ID / Passport No.:"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:id="@+id/tvDetailNidOrPass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="9876543210987"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- CardView 2: Contact Details -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Contact Details"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="12dp"/>

                    <!-- Email -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email:"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:id="@+id/tvDetailEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="john.doe@office.com"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>

                    <!-- Phone -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Phone Number:"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:id="@+id/tvDetailPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="+880123456789"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>

                    <!-- Address -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Address:"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:id="@+id/tvDetailAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Flat A, House 10, Road 5, Dhaka, Bangladesh"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- CardView 3: Job Information -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Job Information"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="12dp"/>

                    <!-- Department -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Department:"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:id="@+id/tvDetailDepartment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Information Technology (IT)"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>

                    <!-- Position -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Position / Designation:"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:id="@+id/tvDetailPosition"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Senior Software Engineer"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>

                    <!-- Salary -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Salary:"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:id="@+id/tvDetailSalary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="BDT 75,000"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>